<html>
  <body>
      {% for secretarie in app.officers_secretaries %}
        <h2 style="width:100%;text-align:center;">REGISTER OF SECRETARIES AND MANAGERS</h2>
        <div style="width:100%; height:10px;"></div>
        <table>
          <tr>
            <td style="text-align:left;font-size:11px; font-weight: bold;">Name of Company:&nbsp;&nbsp;&nbsp;&nbsp;{{ app.company_name }}</td>
            <td style="text-align:right;font-size:11px;">Page {{ loop.index }}</td>
          </tr>
        </table>
        <div style="width:100%; height:5px;"></div>
        <table cellpadding="4" border="3" width="100%">
          <tr>
            <td colspan="6" style="border: 1px solid #111; text-align: center;">SECRETARIES</td>
          </tr>
          <tr style="text-align:center;font-size:11px; font-weight: bold;">
            <td class="tl" style="border: 1px solid #111" width="20%"><br/><br/>Full name</td>
            <td class="tl" style="border: 1px solid #111" width="35%"><br/><br/>Residential address</td>
            <td class="tl" style="border: 1px solid #111" width="10%"><br/><br/>Identity / Passport no.</td>
            <td class="tl" style="border: 1px solid #111" width="15%"><br/>Nationality</td>
            <td class="tl" style="border: 1px solid #111" width="10%"><br/><br/>Date of appointment or change</td>
            <td class="tl" style="border: 1px solid #111" width="10%"><br/><br/>Date ceased as secretary</td>
          </tr>
          {% if app.officers_secretaries %}
            {% for office in app.officers_secretaries %}
              <tr style="font-size: 11px">
                <td class="tl" width="20%" style="text-align:left;border: 1px solid #111;">{{ office.full_name }}</td>
                <td class="tl" width="35%" style="border: 1px solid #111">{{ office.address_1 }}</td>
                <td class="tl" width="10%" style="text-align:center; border: 1px solid #111">{{ office.id_number }}</td>
                <td class="tl" width="15%" style="text-align:center; border: 1px solid #111">{{ office.nationality }}</td>
                <td class="tl" width="10%" style="text-align:center; border: 1px solid #111">
                  {{ office.date_appointed }}
                </td>
                <td class="tl" width="10%" style="text-align:center; border: 1px solid #111">
                    {{ office.date_ceased }}
                </td>
              </tr>
              <tr style="font-size: 11px">
                <td class="tl" style="border: 1px solid #111"></td>
                <td class="tl" style="border: 1px solid #111">{{ office.address_2 }} {% if office.postal_code %}({{ office.postal_code }}){% endif %}</td>
                <td class="tl" style="border: 1px solid #111"></td>
                <td class="tl" style="border: 1px solid #111"></td>
                <td class="tl" style="border: 1px solid #111"></td>
                <td class="tl" style="border: 1px solid #111"></td>
              </tr>
              <tr>
                <td class="tl" style="border: 1px solid #111"></td>
                <td class="tl" style="border: 1px solid #111"></td>
                <td class="tl" style="border: 1px solid #111"></td>
                <td class="tl" style="border: 1px solid #111"></td>
                <td class="tl" style="border: 1px solid #111"></td>
                <td class="tl" style="border: 1px solid #111"></td>
              </tr>
            {% endfor %}
          {% else %}
            <tr>
              <td class="tl" style="border: 1px solid #111"></td>
              <td class="tl" style="border: 1px solid #111"></td>
              <td class="tl" style="border: 1px solid #111"></td>
              <td class="tl" style="border: 1px solid #111"></td>
              <td class="tl" style="border: 1px solid #111"></td>
              <td class="tl" style="border: 1px solid #111"></td>
            </tr>
          {% endif %}
          <tr>
            <td colspan="6" style="border: 1px solid #111; text-align: center;">MANAGER</td>
          </tr>
          <tr style="text-align:center;font-size:11px; font-weight: bold;">
            <td class="tl" style="border: 1px solid #111" width="20%"><br/><br/>Full name</td>
            <td class="tl" style="border: 1px solid #111" width="35%"><br/><br/>Residential address</td>
            <td class="tl" style="border: 1px solid #111" width="10%"><br/><br/>Identity / Passport no.</td>
            <td class="tl" style="border: 1px solid #111" width="15%"><br/><br/>Nationality</td>
            <td class="tl" style="border: 1px solid #111" width="10%"><br/><br/>Date of appointment or change</td>
            <td class="tl" style="border: 1px solid #111" width="10%"><br/><br/>Date ceased as secretary</td>
          </tr>
          {% if officers_secretaries %}
            {% for office in officers_secretaries %}
              <tr style="font-size: 11px">
                <td class="tl" width="20%" style="text-align:left;border: 1px solid #111;">{{ office.full_name }}</td>
                <td class="tl" width="35%" style="border: 1px solid #111">{{ office.address_1 }}</td>
                <td class="tl" width="10%" style="text-align:center; border: 1px solid #111">{{ office.id_number }}</td>
                <td class="tl" width="15%" style="text-align:center; border: 1px solid #111">{{ office.nationality }}</td>
                <td class="tl" width="10%" style="text-align:center; border: 1px solid #111">
                  {{ office.date_appointed }}
                </td>
                <td class="tl" width="10%" style="text-align:center; border: 1px solid #111">
                  {{ office.date_ceased }}
                </td>
              </tr>
              <tr style="font-size: 11px">
                <td class="tl" style="border: 1px solid #111"></td>
                <td class="tl" style="border: 1px solid #111">{{ office.address_2 }} {% if office.postal_code %}({{ office.postal_code }}){% endif %}</td>
                <td class="tl" style="border: 1px solid #111"></td>
                <td class="tl" style="border: 1px solid #111"></td>
                <td class="tl" style="border: 1px solid #111"></td>
                <td class="tl" style="border: 1px solid #111"></td>
              </tr>
              <tr>
                <td class="tl" style="border: 1px solid #111"></td>
                <td class="tl" style="border: 1px solid #111"></td>
                <td class="tl" style="border: 1px solid #111"></td>
                <td class="tl" style="border: 1px solid #111"></td>
                <td class="tl" style="border: 1px solid #111"></td>
                <td class="tl" style="border: 1px solid #111"></td>
              </tr>
            {% endfor %}
          {% else %}
            <tr>
              <td class="tl" style="border: 1px solid #111"></td>
              <td class="tl" style="border: 1px solid #111"></td>
              <td class="tl" style="border: 1px solid #111"></td>
              <td class="tl" style="border: 1px solid #111"></td>
              <td class="tl" style="border: 1px solid #111"></td>
              <td class="tl" style="border: 1px solid #111"></td>
            </tr>
          {% endif %}
        </table>
        {% if loop.last %}
        {% else %}
          <br pagebreak="true" />
        {% endif %}
      {% endfor %}
  </body>
</html>
